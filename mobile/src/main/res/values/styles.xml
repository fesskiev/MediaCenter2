<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TransparentStatusBarTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorControlHighlight">@color/color_background</item>â€¨
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/yellow</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/primary</item>
        <item name="tabSelectedTextColor">@color/accent</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:textColorHint">@color/yellow</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="CustomTabStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/primary</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleTextAccent</item>
    </style>

    <style name="ToolbarStyleTransparent">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleTextAccent</item>
    </style>

    <style name="Toolbar.TitleTextAccent" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="NavViewTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="HeaderTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="HeaderTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="FoldersNameTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="FileTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TrackNumberTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="FileDescTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="FolderPathTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="FileDesc1TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="NotificationTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="DividerStyle" parent="@android:style/TextAppearance">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="FolderGridView">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/grid_view_list_selector</item>
    </style>

</resources>
